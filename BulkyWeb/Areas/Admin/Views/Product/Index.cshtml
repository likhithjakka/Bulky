@model List<Product>

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient margin-right-4 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2 ">Product List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end my-2">
				<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Product
				</a>
			</div>
			
		</div>
	 <table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
						Product Title
				</th>
				<th>
						Description
				</th>
					<th>ISBN</th>
					<th>
						Author
					</th>
					<th>
						Price
					</th>
					<th>ListPrice</th>
					<th>CategoryID</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.OrderBy(u => u.Id))
			{
				<tr>
					<td> @obj.Title</td>
					<td>
						@obj.Description
					</td>
					<td>@obj.ISBN</td>
					<td>@obj.Author</td>
					<td>@obj.Price</td>
					<td>@obj.ListPrice</td>
					<td>@obj.CategoryId</td>


					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary" mx-2>
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger" mx-2>
								<i class="bi bi-trash3"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	 </table>
	
	</div>
</div>




